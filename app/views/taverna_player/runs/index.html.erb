<h1>Runs</h1>

<table>
  <tr>
    <th>Run</th>
    <th>Id on Taverna Server</th>
    <th>State</th>
    <th>Create time</th>
    <th>Start time</th>
    <th>Finish time</th>
    <th colspan="2">Actions</th>
  </tr>

<% @runs.each do |run| %>
  <tr>
    <td><%= run.id %></td>
    <td><%= run.run_id %></td>
    <td><%= run.state %></td>
    <td><%= run.create_time %></td>
    <td><%= run.start_time %></td>
    <td><%= run.finish_time %></td>
    <td><%= link_to 'Show', run %></td>
    <% if run.finished? || run.cancelled? %>
      <td><%= link_to 'Destroy', run, :method => :delete, :data => { confirm: 'Are you sure?' } %></td>
    <% else %>
      <td><%= link_to "Cancel", cancel_run_path(run.id), :method => :put, :data => { confirm: "Are you sure?" } %></td>
    <% end %>
  </tr>
<% end %>
</table>
