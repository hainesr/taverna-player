
$("#run-info").replaceWith('<%= escape_javascript(render(:partial => "info", :locals => { :run => @run })) %>');

$("#run-button").replaceWith('<%= escape_javascript(render(:partial => "button", :locals => { :run => @run })) %>');

<% if @interaction.nil? || @new_interaction %>
  $("#run-interaction").replaceWith('<%= escape_javascript(render(:partial => "interaction", :locals => { :run => @run, :interaction => @interaction })) %>');
<% end %>

<% if @run.outputs.size > 0 %>
  $("#run-outputs").replaceWith('<%= escape_javascript(render(:partial => "outputs", :locals => { :run => @run })) %>');
<% end %>

$("#run-poll").replaceWith('<%= escape_javascript(render(:partial => "poll", :locals => { :run => @run, :interaction => !@interaction.nil? })) %>');
