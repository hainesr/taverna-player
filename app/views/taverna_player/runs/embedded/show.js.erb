
jQuery("#run-info").replaceWith('<%= escape_javascript(render(:partial => "taverna_player/runs/embedded/info", :locals => { :run => @run })) %>');

jQuery("#run-button").replaceWith('<%= escape_javascript(render(:partial => "taverna_player/runs/embedded/button", :locals => { :run => @run })) %>');

<%
  # Note that the base run/interaction partial is used here. You can still
  # override it in the embedded directory if you wish but you will need to
  # change the file name below AND in embedded/show.html.erb.
%>
<% if @interaction.nil? || @new_interaction %>
  jQuery("#run-interaction").replaceWith('<%= escape_javascript(render(:partial => "interaction", :locals => { :run => @run, :interaction => @interaction })) %>');
<% end %>

<% if @run.complete? %>
  jQuery("#run-outputs").replaceWith('<%= escape_javascript(render(:partial => "taverna_player/runs/embedded/outputs", :locals => { :run => @run })) %>');
<% else %>
  <%
    # Note that the base run/poll partial is used here. You can still
    # override it in the embedded directory if you wish but you will need to
    # change the file name below AND in embedded/show.html.erb.
  %>
  jQuery("#run-poll").replaceWith('<%= escape_javascript(render(:partial => "poll", :locals => { :reload => run_path(@run) })) %>');
<% end %>
