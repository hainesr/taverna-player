<div id="run-inputs">
  <h2>Inputs</h2>

  <% run.inputs.each do |input| %>
    <p>
      <b>Name:</b>
      <%= input.display_name %>
    </p>

    <% if input.file.blank? %>
    <p>
      <b>Value:</b>
      <%= input.value %>
    </p>
    <% else %>
    <p>
      <b>File:</b>
      <%= link_to input.file_file_name, input.file.url %>
    </p>
    <% end %>
  <% end%>
</div>
